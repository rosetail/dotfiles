#!/bin/sh

# if  [ -S /tmp/emacs1000/server ]
# then
#	echo "Loading..."
#	emacs --daemon 2> /dev/null
# fi

if [ -z "$@" ];
then
	emacsclient -c --eval "(progn
					  (switch-to-buffer \"*scratch*\")
					  (select-frame-set-input-focus (selected-frame))
					  (cd \"$PWD\"))" "$@"

else
	emacsclient -c "$@"
fi
